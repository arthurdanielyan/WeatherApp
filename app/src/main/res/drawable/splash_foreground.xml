<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="center"
        android:width="100dp"
        android:height="100dp">
        <shape
            android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#d9daff"
                android:endColor="#878bff" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:width="80dp"
        android:height="80dp"
        android:drawable="@drawable/app_logo_fg">
    </item>
</layer-list>